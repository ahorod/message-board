<button class="my-btn" id="delete" {{action 'delete' answer}}></button>
<button class="my-btn" id="update" data-toggle="modal" data-target=".update-answer-modal-lg"></button>

<!-- Modal -->

<div class="modal fade update-answer-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
<div class="modal-dialog modal-lg">
  <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Update Answer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="post">
        <div class="modal-body">
          <div class="form-group row">
            <label for="name" class="col-2 col-form-label">Name:</label>
            <div class="col-10">
              {{input class="form-control" type="text" value=name placeholder=answer.name}}
            </div>
          </div>
          <div class="form-group row">
            <label for="date" class="col-2 col-form-label">Date:</label>
            <div class="col-10">
              {{input class="form-control" type="date" value=date placeholder=answer.date}}
            </div>
          </div>
          <div class="form-group row">
            <label for="author" class="col-2 col-form-label">Author:</label>
            <div class="col-10">
              {{input class="form-control" type="author" value=author placeholder=answer.author}}
            </div>
          </div>
          <div class="form-group row">
            <label for="content" class="col-2 col-form-label">Content </label>
            <div class="col-10">
              {{textarea type="text" placeholder="Answer" value=content class="form-control" rows="3"
                    enter="answerSave" placeholder=answer.content}}
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button {{action 'updateAnswer' answer}} class="btn btn-primary" data-dismiss="modal">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
