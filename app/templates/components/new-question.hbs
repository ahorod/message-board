<!-- Button trigger modal -->
<button type="button" class="btn btn-secondary" id="ask" data-toggle="modal" data-target=".bd-example-modal-lg">
  Ask Question
</button>

<!-- Modal -->

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
<div class="modal-dialog modal-lg">
  <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">New Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="post">
        <div class="modal-body">
          <div class="form-group row">
            <label for="title" class="col-2 col-form-label">Title:</label>
            <div class="col-10">
              {{input class="form-control" type="text" value=title}}
            </div>
          </div>
          <div class="form-group row">
            <label for="date" class="col-2 col-form-label">Date:</label>
            <div class="col-10">
              {{input class="form-control" type="date" value=date}}
            </div>
          </div>
          <div class="form-group row">
            <label for="category" class="col-2 col-form-label">Author: </label>
            <div class="col-10">
              {{input class="form-control" type="text" value=author}}
            </div>
          </div>
          <div class="form-group row">
            <label for="content" class="col-2 col-form-label">Content </label>
            <div class="col-10">
              {{textarea type="text" placeholder="Answer" value=content class="form-control" rows="20"
                    enter="answerSave"}}
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button {{action 'saveQuestion'}} class="btn btn-primary" data-dismiss="modal">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
