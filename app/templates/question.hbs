<div id="post-page" class="container">
  <div class="row">

      <div class="col-sm-8 blog-main">
        <div class="blog-post">
          <h3 class="blog-post-title">{{model.title}}</h3>
          <p class="blog-model-meta">{{model.author}} {{model.date}}</p>
          <p>{{model.content}}</p>
          {{edit-question question=model update='update' destroyQuestion='destroyQuestion'}}
          <br>
          <div class="comment-div">
            <h3>Answers</h3>
            <br>
            {{#each model.answers as |answer|}}
              <div class="comment-section">
                <h4 class="lead">{{answer.name}}</h4>
                <p>{{answer.author}} {{answer.date}}</p>
                <p>{{answer.content}}</p>
                {{edit-answer answer=answer destroyAnswer='destroyAnswer' updateAnswer='updateAnswer'}}
              </div>
              <br>
            {{/each}}
          </div>
          <br>
          {{new-answer saveAnswer="saveAnswer" post=model}}
        </div>
      </div>
      <!-- Side Bar -->
      <div class="col-sm-3 offset-sm-1 blog-sidebar">
        <div class="sidebar-module sidebar-module-inset">
          <h4>About</h4>
          <p>Ce qui embellit le d√©sert, c'est qu'il cache un puits quelque part...</p>
        </div>

        <div class="sidebar-module">
          <h4>Elsewhere</h4>
          <ol class="list-unstyled">
            <li><a href="#">GitHub</a></li>
            <li><a href="#">Twitter</a></li>
            <li><a href="#">Facebook</a></li>
          </ol>
        </div>

      </div><!-- /.blog-sidebar -->
    </div><!-- /.row -->
  </div><!-- /.container -->
